GridLayout:
    cols: 4
    spacing: 5
    padding: 10

    Label:
        id: display
        text: "0"
        font_size: 40
        size_hint_y: 0.5
        halign: "right"
        valign: "middle"
        text_size: self.size  # importante para alinhar o texto

    Button:
        text: "7"
        font_size: 30
        background_color: 0.7, 0.7, 0.7, 1
        on_press: app.clique_botao(self.text)

